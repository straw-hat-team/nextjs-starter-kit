{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"],
      "inputs": [".env.production.local", ".env.local", ".env.production", ".env"],
      "env": [
        "ANALYZE",
        "SKIP_ENV_VALIDATION",
        "VERCEL_URL",
        "VERCEL",
        "NODE_ENV",
        "AUTH_SECRET",
        "AUTH_URL",
        "AUTH_ZITADEL_ISSUER",
        "AUTH_ZITADEL_ID",
        "AUTH_ZITADEL_SECRET",
        "AUTH_REDIRECT_PROXY_URL",
        "BASE_URL"
      ]
    },
    "tsc:check": {
      "dependsOn": ["^tsc:check"]
    },
    "lint:eslint": {},
    "format:prettier": {
      "dependsOn": ["^format:prettier"]
    },
    "test:playwright:headless": {
      "outputs": ["playwright-report", "test-results"]
    },
    "storybook:build": {
      "inputs": ["src/**", "stories/**", "public/**", ".storybook/**"],
      "outputs": ["storybook-static"]
    },
    "test:storybook": {
      "inputs": ["src/**", "stories/**", "public/**", ".storybook/**"],
      "outputs": ["coverage/storybook"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "inputs": [".env.development.local", ".env.local", ".env.development", ".env"]
    },
    "test:vitest": {
      "dependsOn": ["build"],
      "inputs": ["src/**/*.tsx", "src/**/*.ts", "tests/vitest/**/*.ts", "tests/vitest/**/*.tsx"]
    }
  }
}
